<view class="bg-white margin-lr margin-tb padding shadow" style="border-radius:15rpx;">
  <!-- 一、头像，队名 -->
  <view class="flex justify align-center text-black"> 
    <view class="cu-avatar round lg margin-right-sm" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);"></view>
    <view class="title flex flex-direction justify-center align-start" style="flex-grow:1">
      <view class="flex align-center text-bold margin-bottom-xs">
        <text class="margin-right-sm">{{team.teamName}}</text>
      </view>
      <view class="text-gray text-sm flex justify-between">2019年12月3日</view>
    </view>
    <text wx:if="{{team.category<6}}" class="cu-tag bg-{{categoryColor[team.category]}} light text-sm text-bold radius">{{categoryName[team.category]}}</text>
    <view class="more margin-left margin-right-sm">
      <!-- <text class="cuIcon-moreandroid margin-left-sm text-grey" style="font-size:45rpx"></text> -->
      <text class="cuIcon-more text-grey" style="font-size:45rpx"></text>
    </view>
  </view>
  <!-- 二、分类、团队介绍 -->
  <view class="margin-top-sm text-black" catchtap="jumpToTeamDetailPage">
    <view class="margin-tb-xs">
      <text class="margin-right-sm text-{{categoryColor[team.category]}} text-bold" wx:for="{{team.categoryExplain}}">{{item}}</text>
    </view>
    <view class="margin-tb-xs introduction">
      <text class="margin-tb-xs margin-right-sm text-brown text-bold">团队介绍：</text>
      <text>{{team.introduction}}</text>
    </view>
  </view>
  <!-- 三、队伍成员 -->
  <view class="flex margin-top-sm light flex-wrap">
    <view class="margin-right-xs margin-bottom-xs cu-avatar round" style="background-image:url({{item.avatar}});" wx:for="{{team.members}}"></view>
    <view class="cu-avatar round bg-grey light">
      <text class="cuIcon-more"></text>
    </view>
  </view>
  <!-- 四、申请加入 -->
  <view class="flex justify-end align-center margin-top-sm">
    <view class="cu-btn bg-brown text-bold text-white radius shadow">申请加入</view>
    
  </view>
</view>

