<view class="flex flex-direction justify-end" style="background-image: url(https://qiniu.freespace.yuxue0824.com/backImage3.png);background-repeat:no-repeat;background-size:contain;height:600rpx;">
  <view class="flex flex-direction align-center margin-lg shadow bg-white" style="border-radius: 40rpx;position:relative;box-shadow: 0rpx 0rpx 40rpx 0rpx rgb(211, 213, 229);">
    <!-- 头像 -->
    <view class="cu-avatar round xl" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);width:128rpx !;height:128rpx !;position: absolute;top: -64rpx;box-shadow: 0px 0px 0rpx 5rpx #ffffff;"></view>
    <!-- 头像占位框 -->
    <view style="height: 64rpx;"></view>
    <!-- 右上角的编辑按钮 -->
    <view style="position: absolute;top:25rpx;right:25rpx;">
      <text class="cuIcon-writefill text-grey" style="font-size: large;"></text>
    </view>
    <!-- 昵称 -->
    <view class="flex margin-top">
      <text class="text-black text-bold">任涛</text>
    </view>
    <!-- 个人介绍 -->
    <view class="flex justify-center margin-top-sm padding-lr-xl" style="display: -webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;overflow: hidden;">
      <text class="" style="text-align: center">所有悔暗都留给过往，从遇见你开始，凛冬散净，星河长明。</text>
    </view>
    <!-- 学校、专业、擅长领域 -->
    <scroll-view class="flex padding-lr-xl margin-tb-sm" scroll-x="true" enable-flex="true" style="white-space: nowrap;height:55rpx;">
      <view class="flex align-center padding-tb-xs padding-lr margin-right text-black round" style="background-color: #DEE3DD; display:block">长安大学</view>
      <view class="flex align-center padding-tb-xs padding-lr margin-right text-black round" style="background-color: #DEE3DD; display:block">软件工程</view>
      <view class="flex align-center padding-tb-xs padding-lr margin-right text-black round" style="background-color: #DEE3DD; display:block">小程序开发，网络爬虫</view>
    </scroll-view>
  </view>
</view>

