
<view class="members {{show||animation?'show animation-show':'' }}{{animation?'  animation-hidden':''}}">
  <!-- 头部 -->
  <view class="head">
    <view class="title" wx:if="{{type==='changeLeader'}}">更换队长</view>
    <view class="title" wx:if="{{type==='deleteMember'}}">移除队员</view>
    <view class="exit icon-exit" catchtap="onClose"></view>
  </view>
  <scroll-view scroll-y class="content">
    <view 
      wx:for="{{members}}" 
      wx:key="index"
      wx:for-index="index" 
      wx:for-item="member"
      class="item {{index===select?'select':''}}"
      bindtap="SelectItem"
      data-index="index"
    >
      <view class="left">
        <image class="icon" src="{{member.avatar}}"></image>
        <view class="name">{{member.name}}</view>
      </view>
      <view wx:if="{{type==='deleteMember'}}" class="right">
        <button class="btn" bindtap="DeleteMember">移除</button>
      </view>
    </view>
  </scroll-view>
</view>
<view class="mask {{show?'show':''}}" catchtap="hidden"></view>