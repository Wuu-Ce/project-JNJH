/* 底部线 */
.bottomLine {
  border-bottom: solid 4rpx rgba(15, 117, 201, 0.5);
}

/* 首行缩进 */
.text-long{
  text-indent: 50rpx;
  text-align: left;
}

/* 四面边框 */
.borderAll {
  background-color: rgba(171, 209, 240, 0.1);
  border: solid 2rpx rgba(15, 117, 201, 0.3);
  border-radius: 20rpx;
}

/* 捕捉点击容器 */
.catchView {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10
}

/* 更多菜单 */
.moreMenu {
  position:absolute;
  top:300rpx;
  right:10rpx;
  width:260rpx;
  z-index: 100
}

/* 缩略文本容器 */
.text-content {
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 3;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}
 
.hidden-text {
  max-width: 4em;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

/* 队长标识 */
.leader-tag {
  position: absolute;
  top:10rpx;
  left: 50rpx;
  opacity: 0.8;
}