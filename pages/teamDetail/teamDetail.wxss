.mainContainer {
  display: flex;
  flex-flow: column;
}
.fill {
  height: 10%;
  flex-basis: auto;
  flex-shrink: 10;
  flex-grow: 1;
}
/* 底部线 */
.bottomLine {
  border-bottom: solid 4rpx rgb(201, 191, 211);
}

/* 首行缩进 */
.text-long{
  text-indent: 50rpx;
  text-align: left;
}

.recruit-item {
  position: relative;
  border-radius: 15rpx;
  background-color: rgb(201, 191, 211);
  box-shadow: 10rpx 10rpx 20rpx 5rpx rgba(201, 191, 211, 0.5),-10rpx -10rpx 20rpx 5rpx rgba(201, 191, 211, 0.5);
}
.recruit-item-disable {
  position: relative;
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  box-shadow: 10rpx 10rpx 20rpx 5rpx rgba(0, 0, 0, 0.1),-10rpx -10rpx 20rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 限定本校tag */
.wuutag {
  position: absolute;
  display: flex;
  justify-content: space-between;
  top: 0;
  right: 10rpx;
  height: 40rpx;
  pointer-events: none;
}

.wuutag .item {
  display: flex;
  justify-content: space-between;
  margin: 0 10rpx 0 10rpx;
  background-color: rgb(201, 191, 211);
}

.wuutag .left-box {
  width: 8rpx;
  height: 100%;
  border-radius: 0 8rpx 0 0;
  background-color: white;
}

.wuutag .right-box {
  width: 8rpx;
  height: 100%;
  border-radius: 8rpx 0 0 0;
  background-color: white;
}

.wuutag .main-box {
  height: 100%;
  background-color: white;
}

.wuutag .main-content {
  border-radius: 0 0 8rpx 8rpx;
  padding: 4rpx 10rpx 4rpx 10rpx;
  background-color: rgb(201, 191, 211);
}

.finishText {
  color: rgb(235, 235, 234);
  position: absolute;
  bottom: 0;
  right: 60rpx;
  font-style: italic;
  pointer-events: none;
}

/* 捕捉点击容器 */
.catchView {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10
}

/* 更多菜单 */
.moreMenu {
  position:absolute;
  top:300rpx;
  right:10rpx;
  width:260rpx;
  z-index: 100
}

/* 缩略文本容器 */
.text-content {
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 3;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}
 
.hidden-text {
  max-width: 4em;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

/* 队长标识 */
.leader-tag {
  position: absolute;
  top:10rpx;
  left: 50rpx;
  opacity: 0.8;
}